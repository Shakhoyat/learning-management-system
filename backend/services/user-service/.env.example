# User Service Environment Variables

# Server Configuration
NODE_ENV=development
USER_SERVICE_PORT=3002

# Database
MONGODB_URI=mongodb://localhost:27017/lms_development

# JWT Configuration (should match auth service)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1d

# Cloudinary Configuration (optional - for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Other Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:3001
MATCHING_SERVICE_URL=http://localhost:3004
SKILL_SERVICE_URL=http://localhost:3003
SESSION_SERVICE_URL=http://localhost:3005
PAYMENT_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379